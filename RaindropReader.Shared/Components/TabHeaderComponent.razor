@using RaindropReader.Shared.Services

@inject ReaderService _readerService

@code {
    protected override void OnInitialized()
    {
        _readerService.UpdateTabHeader += StateHasChanged;
        base.OnInitialized();
    }
}

<!-- Tab title bar -->
<div class="row row-no-margin">
    @foreach (var tab in _readerService.GetTabs())
    {
        <div class="col-9 col-sm-6 col-md-3 col-lg-2 col-no-margin">
            <div class="p-2" style="background:@(tab.IsSelected ? "red" : "lightgray")" @onclick="() => tab.IsSelected = true">
                @tab.Title
            </div>
        </div>
    }
</div>
